html(lang='en', ng-app='billingErp')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/sidebar.css')
    link(rel='stylesheet', href='/css/custom.css')
    link(rel='stylesheet', href='/css/app.css')
    link(rel='stylesheet', href='/css/loading-bar.css')
    link(rel='stylesheet', href='bower_components/nvd3/build/nv.d3.min.css')
    //link(rel='stylesheet', href='/css/ngPrint.min.css')
    link(rel='stylesheet', href='/css/angularPrint.css')
    link(rel='shortcut icon', href='favicon.png')
    base(href='/')
  body
    div(id='wrapper')
      div(id='sidebar-wrapper').hidden-print
        ul.sidebar-nav
          li.sidebar-brand
            img(width='195', height='47')
          li
            a(href='/invoices', id='invoices') INVOICES
                span(class='glyphicon glyphicon-list-alt').white
          li
            a(href='/billed', id='billed') BILLED INVOICES
                span(class='glyphicon glyphicon-euro').white
          li
            a(href='/customers', id='customers') CUSTOMERS
                span(class='glyphicon glyphicon-user').white
          li
            a(href='/upload', id='upload') UPLOAD
                span(class='glyphicon glyphicon-upload').white
          li
            a(href='/download/', id='download') DOWNLOAD
                span(class='glyphicon glyphicon-download').white
          li
            a(href='/addmanually', id='addmanually') ADD MANUALLY
                span(class='glyphicon glyphicon-plus-sign').white
          li
            a(href='/statistics', id='statistics') STATISTICS
                span(class='glyphicon glyphicon-stats').white
          li
            a(href='/settings', id='statistics') SETTINGS
                span(class='glyphicon glyphicon-cog').white
      div(id='page-content-wrapper')
        div.container-fluid
          block content

    script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='js/bootstrap.js')
    script(src='js/layout.js')
    script(src='js/lib/angular/angular.js')
    script(src='js/lib/angular/i18n/angular-locale_de-de.js')
    script(src='js/lib/angular/angular-route.js')
    script(src='bower_components/angular-smart-table/dist/smart-table.js')
    script(src='bower_components/ng-flow/dist/ng-flow-standalone.js')
    script(src='bower_components/angular-bootstrap/ui-bootstrap-tpls.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular-filter/0.5.4/angular-filter.min.js')
    script(src='js/lib/angular/loading-bar.js')
    script(src='bower_components/d3/d3.js')
    script(src='bower_components/nvd3/build/nv.d3.js')
    script(src='bower_components/angular-nvd3/dist/angular-nvd3.js')
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')
    //script(src='js/ngPrint.min.js')
    script(src='js/angularPrint.js')
    block script
